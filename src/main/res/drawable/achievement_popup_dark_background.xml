<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/black" />
            <corners android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>

    <item android:bottom="@dimen/achievement_popup_padding_bottom" >
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_popup_background" />
            <corners android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>
</layer-list>